<h1>Welcome!</h1>
<ul>
{{#each users}}
  <li> <a href='/profiles/{{id}}'>{{name}}</a>({{email}})</li>
{{/each}}
</ul>

<form action='/profiles' method='POST'>
  Name:
  <input type='text' name='name' placeholder='Name' value='{{name}}'>
  <br>
  Email:
  <input type='text' name='email' placeholder='Email Address' value='{{email}}'>
  <br>
  URL:
  <input type='text' name='url' placeholder='Favourite Website' value='{{url}}'>
  <br>
  Profile Picture:
  <input type='text' name='picture' placeholder='Favourite Picture' value='{{picture}}'>
  <br>
  <input type='submit' name='' value='Submit'>
</form>